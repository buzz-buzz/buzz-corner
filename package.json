{
  "name": "buzz-corner",
  "version": "0.1.1",
  "private": true,
  "proxy": "http://localhost:16111/",
  "dependencies": {
    "classnames": "^2.2.5",
    "co-request": "^1.0.0",
    "concurrently": "^3.5.1",
    "js-koa-pug": "^1.0.3",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-busboy": "^1.1.1",
    "koa-mount": "^3.0.0",
    "koa-router": "^7.3.0",
    "koa-send": "^4.1.2",
    "koa-static": "^4.0.2",
    "koa-useragent": "^1.0.0",
    "lodash": "^4.17.5",
    "qiniu": "^7.1.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router": "3.2.0",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.5",
    "semantic-ui-css": "^2.2.12",
    "semantic-ui-react": "^0.77.0",
    "universal-cookie": "^2.1.2",
    "wechat-js-sdk": "^1.3.3"
  },
  "scripts": {
    "start": "concurrently \"react-scripts build\" \"node app.js\"",
    "client": "set PORT=80&&react-scripts start",
    "server": "set NODE_ENV=development&&node app.js",
    "prd-server": "set NODE_ENV=production&&set PORT=80&&node app.js",
    "build": "node node_modules/react-scripts/bin/react-scripts.js build",
    "test": "npm run client-test",
    "client-test": "react-scripts test --env=jsdom",
    "server-test": "set PORT=22222&&node_modules\\react-scripts\\node_modules\\.bin\\jest --env=jsdom test\\\\.+\\.test\\.js",
    "coverage": "react-scripts test --env=jsdom --coverage",
    "eject": "react-scripts eject",
    "deploy": "npm install && npm run build && gulp cdn"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "gulp": "^4.0.0",
    "gulp-replace": "^0.6.1",
    "jest": "^22.1.1",
    "mocha": "^4.1.0",
    "react-app-rewired": "^1.5.0",
    "react-scripts": "^1.1.1",
    "supertest": "^3.0.0"
  },
  "apps": [
    {
      "script": "app.js",
      "watch": "true",
      "name": "buzz-corner"
    }
  ]
}
