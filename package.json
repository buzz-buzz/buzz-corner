{
  "name": "buzz-corner",
  "version": "0.1.2",
  "private": true,
  "proxy": "http://127.0.0.1:16111/",
  "dependencies": {
    "autoprefixer": "7.1.6",
    "babel-core": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.2",
    "babel-preset-react-app": "^3.1.1",
    "babel-runtime": "6.26.0",
    "camelcase": "^4.1.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "1.1.3",
    "classnames": "^2.2.5",
    "co-request": "^1.0.0",
    "css-loader": "0.28.7",
    "dotenv": "4.0.0",
    "dotenv-expand": "4.2.0",
    "eslint": "4.10.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "2.39.1",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.4.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "fs-extra": "3.0.1",
    "html-webpack-plugin": "2.29.0",
    "jest": "20.0.4",
    "js-koa-pug": "^1.0.3",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-busboy": "^1.1.1",
    "koa-mount": "^3.0.0",
    "koa-router": "^7.3.0",
    "koa-send": "^4.1.2",
    "koa-static": "^4.0.2",
    "koa-useragent": "^1.0.0",
    "lodash": "^4.17.5",
    "moment": "^2.22.1",
    "moment-timezone": "^0.5.16",
    "node-sass-chokidar": "^1.2.0",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.8",
    "promise": "8.0.1",
    "qiniu": "^7.1.1",
    "raf": "3.4.0",
    "react": "^16.2.0",
    "react-datepicker": "^1.5.0",
    "react-dev-utils": "^5.0.0",
    "react-dom": "^16.2.0",
    "react-router": "3.2.0",
    "redux": "^3.7.2",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.5",
    "semantic-ui-css": "^2.2.12",
    "semantic-ui-react": "^0.77.0",
    "set-cookie-parser": "^2.1.2",
    "style-loader": "0.19.0",
    "sw-precache-webpack-plugin": "0.11.4",
    "ua_parser": "^1.2.4",
    "universal-cookie": "^2.1.2",
    "url-loader": "0.6.2",
    "video-react": "^0.10.4",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.4",
    "webpack-manifest-plugin": "1.3.2",
    "wechat-js-sdk": "^1.3.3",
    "whatwg-fetch": "2.0.3"
  },
  "scripts": {
    "watch-css": "cross-env npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "build-css": "node-sass-chokidar src/ -o src/",
    "start": "concurrently \"npm run server\" \"npm run client\" \"npm run watch-css\"",
    "client": "cross-env PORT=80 node scripts/start.js",
    "server": "cross-env NODE_ENV=development nodemon app.js",
    "build": "node scripts/build.js",
    "test": "cross-env NODE_ENV=test PORT=22222 node scripts/test.js --env=jsdom",
    "coverage": "cross-env PORT=22222 node scripts/test.js --env=jsdom --coverage",
    "deploy": "npm install && npm run build && gulp cdn && gulp track"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.4",
    "fetch-mock": "^6.3.0",
    "gulp": "^4.0.0",
    "gulp-replace": "^0.6.1",
    "jest": "^22.1.1",
    "mocha": "^4.1.0",
    "nodemon": "^1.17.3",
    "react-app-rewired": "^1.5.0",
    "supertest": "^3.0.0"
  },
  "apps": [
    {
      "script": "app.js",
      "watch": "true",
      "name": "buzz-corner",
      "instances": "max",
      "exec_mode": "cluster"
    }
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}",
      "<rootDir>/test/**.test.js"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "mjs",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "nodemonConfig": {
    "ignore": [
      "build/*",
      "node_modules/*",
      "public/*",
      "scripts/*",
      "src/*",
      "test/*"
    ],
    "delay": "2500"
  }
}
